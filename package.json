{
  "name": "shortly",
  "version": "0.0.1",
  "description": "Shortly is a free and easy to use url shortner.",
  "author": {
    "name": "Faustino Zanetto",
    "email": "zanettofaustino@gmail.com"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/database-shortly/prisma/schema.prisma"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "eslint-config-shortly": "*",
    "eslint": "^8.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "turbo": "^1.9.3"
  },
  "lint-staged": {
    "extends": "./lint-staged.config.js"
  },
  "packageManager": "^yarn@1.22.19"
}
