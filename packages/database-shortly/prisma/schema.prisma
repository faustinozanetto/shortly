datasource db {
    provider     = "postgresql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Link {
    id   String @id @default(cuid())
    url  String
    hash String @unique

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
